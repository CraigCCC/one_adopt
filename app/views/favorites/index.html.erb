<%= link_to pages_path do %>
<i class="far fa-arrow-alt-circle-left color-primary-pet h3 p-4"></i>
<% end %>

<div class="container">
  <div class="row col-sm-12 flex-xl-row">
    <% if @sort_fav.empty? %>
    <p class="p-4">趕快去收藏</p>
    <% end %>

    <% @sort_fav.each do |k,v|  %>
    <div class="col">
      <div class="card-pet center mx-auto my-4" style="width: 18rem;">
        <div class="card-header font-weight-bold letter-spacing text-secondary">
          <i class="fas fa-home"></i>
          <%= k %>            
        </div>
        <div class="card-body">
          <% v['animals'].each do |item| %>
          <li>
            <span class="color-primary-pet font-weight-bold">
              <i class="fas fa-paw pr-1"></i><%= item[0] %>
            </span>
            <span><%= item[2] %></span>
            <span><%= item[3] %></span>
            <%= link_to '刪除收藏', favorite_path(item[1]), method: :delete, data: { confirm: '確認刪除?!' } ,class: 'btn btn-delete-pet btn-sm ml-4 my-1' %>  
          </li>
          <% end %>
          <div class="pt-4 pb-2 mt-5 border-top text-center">
            <%= link_to "我要預約", new_reservation_path(:sender => (v['id'])),class: 'btn btn-sm-primary-pet btn-sm mr-1 ' %>
          </div>
        </div>
      </div>
    </div>  
    <% end %> 
  </div>
</div>

