<% if page.current? %>
  <li class="page-item-pet active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link-pet' %>
  </li>
<% else %>
  <li class="page-item-pet">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link-pet' %>
  </li>
<% end %>
