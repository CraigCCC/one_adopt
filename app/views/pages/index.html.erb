<div class="pt-3">
  <%= render 'shared/carousel'%>
  <%#= image_pack_tag 'banner-1.png' , class: ' w-100'%>
</div>

<div class="row mt-4 flex-nowrap">
  <%= link_to searches_path, class: "index-link color-primary-pet col-6" do %>
    <div class="text-center">
      <i class="fas fa-search index-fontawesome"></i>
      <div class="mt-3">搜尋</div>
    </div>
  <% end %>

  <%= link_to favorites_path, class: "index-link color-primary-pet col-6"  do %>
    <div class="text-center">
      <i class="far fa-heart index-fontawesome"></i>
      <div class="mt-3">收藏動物</div>
    </div>
  <% end %>
</div>

<div class="row mt-4 flex-nowrap">
  <%= link_to reservations_path, class: "index-link color-primary-pet col-6" do %>
    <div class="text-center">
      <i class="far fa-calendar-alt index-fontawesome"></i>
      <div class="mt-3">預約記錄</div>
    </div>
  <% end %>

  <%= link_to messages_path, class: "index-link color-primary-pet col-6"  do %>
    <div class="text-center">
      <i class="far fa-envelope index-fontawesome"></i>
      <div class="mt-3">站內信件</div>
    </div>
  <% end %>
</div>
