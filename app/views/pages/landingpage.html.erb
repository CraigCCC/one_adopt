<div class="wrap">
  <div class="content-wrap col-12 mx-auto bg-img">
    <div class="icon-back">
      <%= link_to root_path do %>
        <i class="far fa-arrow-alt-circle-left color-primary-pet h3 py-4"></i>
      <% end %>
    </div>
    <div class="row m-auto">
      <div class="col-12 col-md-6 mx-auto">
        <div class="card-pet d-flex justify-content-center h-100 shadow">
          <div class="card-body text-center py-5">
            <h2 class="color-primary-pet font-weight-bold letter-spacing">登入</h2>
            <hr>
            <div>
              <%= link_to '已有帳號', new_user_session_path, class: "btn btn-secondary-pet btn-sm mx-auto my-2" %>
            </div>
            <div>
              <%= link_to '建立帳號', new_user_registration_path, class: "btn btn-primary-pet btn-sm mx-auto my-2" %>
            </div>
            <div class="pt-3">
              <%= link_to "<i class='fab fa-google-plus'></i>".html_safe, user_google_oauth2_omniauth_authorize_path , class: 'color-primary-pet mx-2 h3' %>
              <%= link_to "<i class='fab fa-facebook'></i>".html_safe, user_facebook_omniauth_authorize_path , class: 'color-primary-pet mx-2 h3' %>
  
              <% if user_signed_in? %>
                  <%= link_to '登出', destroy_user_session_path, method: :delete, class:'btn btn-dark-pet btn-sm mx-auto my-3 rounded-pill'%>
              <% end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


