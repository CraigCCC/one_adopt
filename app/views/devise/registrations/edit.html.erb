<nav aria-label="breadcrumb-pet mt-4">
  <ol class="breadcrumb-pet">
    <li class="breadcrumb-pet-item"><%= link_to "首頁" , pages_path ,class:'bc-item' %></li>
    <li class="breadcrumb-pet-item active" aria-current="page">設定</li>
  </ol>
</nav>

<div class="container col-12 mx-auto bg-img">
  <div class="instroduction-card w-80 center mx-auto mt-5 text-center">
    <div class="card-pet w-75 center mx-auto my-4 pt-5 pb-3" style="width: 18rem;">
      <div class="card-body">
        <h2 class="color-primary-pet font-weight-bold letter-spacing pb-2">編輯<%= resource_name.to_s.humanize %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.label :email, class: "text-secondary py-2" %>
            <%= f.email_field :email, autofocus: true , autocomplete: "email" , class: "form-control mx-auto btn-secondary-pet mb-5" %>
        
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <!-- <hr> -->

            <%= f.label :current_password , "請輸入舊密碼" , class: "text-secondary pb-2 pt-4 border-top" %>

            <%= f.password_field :current_password, autocomplete: "current-password" , class: "form-control mx-auto btn-secondary-pet mb-2" %>
        

            <%= f.label :password, "請輸入新密碼" , class: "text-secondary py-2" %>
            
            <div class="text-secondary">
              <p class="fz-12">沒有要修改密碼,則不需要輸入</p>
            </div>
            <%= f.password_field :password, autocomplete: "new-password" , class: "form-control mx-auto btn-secondary-pet mb-2" , placeholder:"6 characters minimum" %>
            

            <%= f.label :password_confirmation , "請再次輸入新密碼" , class: "text-secondary py-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control mx-auto btn-secondary-pet mb-2" ,placeholder:"6 characters minimum" %>

    
            <%= f.submit "Update" , class: "btn btn-primary-pet my-4" %>
        <% end %>

    </div>
  </div>
</div>