<div class="container col-12 mx-auto bg-img">


<div class="instroduction-card w-80 center mx-auto mt-5 text-center">
    <div class="card-pet w-75 center mx-auto my-4 pt-5 pb-3" style="width: 18rem;">
      <div class="card-body">
        <h2 class="color-primary-pet font-weight-bold letter-spacing pb-2">更改您的密碼</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>


        <%= f.label :password, "新密碼", class: 'text-secondary py-2' %>
        <% if @minimum_password_length %>
        <span class="text-secondary">(最少<%= @minimum_password_length %> 個字)</span>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control mx-auto btn-secondary-pet mb-2' %>



        <%= f.label :password_confirmation, "確認密碼", class: 'text-secondary py-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mx-auto btn-secondary-pet mb-2' %>



        <%= f.submit "確認更改", class:'btn btn-primary-pet btn-sm mx-auto mt-5 mb-2' %>

      <% end %>
    </div>
  </div>
</div>