<div class="container col-12 mx-auto bg-img">
  <%= link_to landingpage_pages_path do %>
  <i class="far fa-arrow-alt-circle-left color-primary-pet h3 p-4"></i>
  <% end %>

<div class="instroduction-card w-80 center mx-auto mt-5 text-center">
    <div class="card-pet w-75 center mx-auto my-4 pt-5 pb-3" style="width: 18rem;">
      <div class="card-body">
        <h2 class="color-primary-pet font-weight-bold letter-spacing pb-2">輸入Email寄送新密碼</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


        <%= f.label :email, class: 'text-secondary py-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mx-auto btn-secondary-pet mb-2'%>



        <%= f.submit "送出", class:'btn btn-primary-pet btn-sm mx-auto mt-5 mb-2' %>

      <% end %>
    </div>

  </div>
</div>