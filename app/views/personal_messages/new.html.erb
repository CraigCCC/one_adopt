<div class="wrap bg-conversations">
  <nav aria-label="breadcrumb-pet mt-4">
    <ol class="breadcrumb-pet">
      <li class="breadcrumb-pet-item"><%= link_to "首頁" , pages_path ,class:'bc-item' %>
      <li class="breadcrumb-pet-item"><%= link_to "收藏動物" , favorites_path ,class:'bc-item' %></li>
      <li class="breadcrumb-pet-item active" aria-current="page"><%= @receiver.name %></li>
    </ol>
  </nav>

  <div class="container">
  	<h3 class="color-primary-pet font-weight-bold letter-spacing pb-3 my-4 border-bottom">傳送訊息給<%= @receiver.name %></h3>
    <div class="row pb-5">
      <div class="col-12 pb-2" id="conversation-main">
        <section class="bg-white rounded-lg shadow-sm my-3 p-4" id="conversation-body">
          <%= form_for @personal_message do |f| %>
            <div class="text-black-50 py-2">
              <%= f.label :body do %>
                <h6>傳送訊息 <i class="fas fa-pen fz-14"></i></h6>
              <% end %>
            </div>
            <div>
              <%= f.text_area :body , class: "w-100 mx-auto btn-secondary-fluid-pet mb-2" %> 
            </div>
            <div class="d-flex justify-content-center">
              <%= f.submit "傳送", class: 'btn btn-primary-pet mt-4 mb-2' %>
            </div>
            <%= hidden_field_tag 'receiver_id', @receiver.id %>
          <% end %>
        </section>
      </div>
    </div>
  </div>
</div>
