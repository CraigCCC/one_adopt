<!DOCTYPE html>
<html>
<head>
  <title>DemoProject</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'picker' %>

</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bgcolor-primary-pet sticky-top">
    
    <%= link_to pages_path do %>
      <h3 class="text-white font-weight-bold letter-spacing px-2"><i class="fas fa-paw"></i>貓狗大平台</h3>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to searches_path do %>
            <div class="nav-link pl-2">搜尋</div>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to favorites_path do %>
            <div class="nav-link pl-2">收藏動物</div>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to reservations_path do %>
            <div class="nav-link pl-2">預約記錄</div>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to edit_user_registration_path do %>
            <div class="nav-link pl-2">設定</div>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to edit_sender_user_path do %>
            <div class="nav-link pl-2"><i class="far fa-laugh pr-1"></i>成為送養者</div>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to destroy_user_session_path , method: 'delete' do %>
            <div class="nav-link pl-2">登出</div>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  <%= render 'shared/flash' if notice %>
  <%= yield %>
  <footer>
    <div class="color-primary-pet text-center font-weight-lighter py-4">
      <small> © 2020 Copyright</small>
    </div>
  </footer>
</body>
</html>


