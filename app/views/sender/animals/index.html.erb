<%= link_to sender_root_path do %>
  <i class="far fa-arrow-alt-circle-left color-primary-pet h3 p-4"></i>
<% end %>
<h2 class="color-primary-pet font-weight-bold letter-spacing pb-4 text-center">寵物管理</h2>
<div class="row"><%= link_to "新增動物", new_sender_animal_path, class: "btn btn-secondary-pet mx-auto" %></div>
<div class="row w-75 m-auto ">
  <% @animals.each do |animal|%>
    <div class="col-md-6 col-xl-3 mt-4 w-50">
      <div class="card searchimg">
        <% if animal.images.attached? %>
          <%= image_tag animal.images.first.variant(resize: "500x400!"), class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <p class="card-text d-flex justify-content-between">
            姓名：<%= animal.name %>
          </p>
          <p class="card-text d-flex justify-content-between flex-wrap">
            <%= link_to "編輯", edit_sender_animal_path(animal), class: 'btn btn-sm-primary-pet btn-sm mr-1 my-2' %>
            <%= link_to "刪除", sender_animal_path(animal), method: :delete, data: {confirm: '
            確定刪除？'}, class: 'btn btn-sm-delete-pet btn-sm mr-1 my-2' %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @animals %>
</div>